{
  // explorer
  "explorer.file.reveal.auto": true,
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "explorer.file.showHiddenFiles": false,
  "explorer.file.hiddenRules": {
    "filenames": ["node_modules", ".git"],
    "patternMatches": ["^\\."]
  },
  // generic
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "dart"
  ],
  "cSpell.userWords": [
    "Ovoro",
    "donsol",
    "junegunn",
    "mantine",
    "neoclide",
    "tpope",
    "xlarge",
    "xsmall"
  ]
}
